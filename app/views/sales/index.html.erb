<div class="container mt-4">
  <h1 class="text-center text-primary mb-4">Sales List</h1>

    <!-- Falta validaciones de CanCanCan -->

    <div class="text-end mb-3">
        <%= link_to 'Add new sale', '/sales/set_products_amount', class: 'btn btn-success' %>
    </div>

    <p class="mb-4">Sales count: <%= @sales.count %></p>

    <% if @sales.count > 0 %>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
        <tr>
            <th>Date & Time</th>
            <th>Products</th>
            <th>Total</th>
            <th>Employee</th>
            <th>Customer</th>
            <th>Actions</th>
        </tr>
        </thead>

        <tbody>
        <% @sales.each do |sale| %>
            <tr>
            <td><%= sale.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
            <!-- 
            <td>
                <% sale.products.each do |product| %>
                <p>
                    <%= product.name %> - Qty: <%= product.quantity %>, Price: <%= number_to_currency(product.price) %>
                </p>
                <% end %>
            </td>
            -->
            <td><%= number_to_currency(sale.total) %></td>
            <td><%= sale.employee.name %></td>
            <td><%= sale.customer.name %></td>
            <td>
                <%= link_to 'Details', sale_path(sale), class: 'btn btn-info btn-sm' %>
                <%= link_to 'Edit', edit_sale_path(sale), class: 'btn btn-warning btn-sm' %>
                <%= link_to 'Delete', sale_path(sale), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </td>
            </tr>
        <% end %>
        </tbody>
    </table>
    <% else %>
    <p class="text-center text-danger">There are no sales to show</p>
    <% end %>
    </div>
