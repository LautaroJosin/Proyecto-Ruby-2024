<div class="container mt-4">
  <h1 class="text-center text-primary mb-4">Clients List</h1>

  <div class="text-end mb-3">
    <%= link_to 'Add new client', new_client_path, class: 'btn btn-success' %>
  </div>

  <p class="mb-4">Clients count: <%= @clients.count %></p>

  <% if @clients.count > 0 %>
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Lastname</th>
          <th>DNI</th>
          <th>Phone</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @clients.each do |client| %>
          <tr>
            <td><%= client.name %></td>
            <td><%= client.lastname %></td>
            <td><%= client.dni %></td>
            <td><%= client.phone %></td>
            <td>
              <div class="d-flex">
                <%= button_to 'Delete', client_path(client), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-center text-danger">There are no clients to show</p>
  <% end %>
</div>
