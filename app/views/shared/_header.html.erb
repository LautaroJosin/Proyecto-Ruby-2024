<header class="container mt-4">
  <h1 class="text-center">Main Menu</h1>
  
  <nav class="navbar navbar-expand-lg navbar-light bg-light">

    <div class="container-fluid">
      <ul class="navbar-nav">

        <li class="nav-item">
          <%= link_to 'Home', root_path, class: 'nav-link' %>
        </li>

        <li class="nav-item">
          <%= link_to 'View products', products_path, class: 'nav-link' %>
        </li>

        <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to 'View users', '/users', class: 'nav-link' %>
        </li>
        <% end %>
      </ul>

    <% if user_signed_in?%>

      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <%= button_to 'Log out', destroy_user_session_path, method: :delete, class: 'btn btn-primary' %>
        </li>
      </ul>

    <% else %>

      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <%= link_to 'Log in', new_user_session_path, class: 'btn btn-primary' %>
        </li>
      </ul>

    <% end %>

    </div>
  </nav>

  <hr>
</header>