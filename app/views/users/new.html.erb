<h1>Add new user</h1>

<%= form_with model: @user do |form| %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: "Enter user's name" %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email, placeholder: "Enter user's email" %>
  </div>

  <div>
    <%= form.label :phone %>
    <%= form.telephone_field :phone, placeholder: "Enter user's phone number" %>
  </div>

  <div>
    <%= form.label :join_date, "Join Date" %>
    <%= form.date_field :join_date %>
  </div>

  <div>
    <%= form.label "Role" %>
    <%= form.collection_select :role_id, Role.all, :id, :name, { include_blank: "Select a role" } %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password, placeholder: "Enter password" %>
  </div>

  <div>
    <%= form.label :password_confirmation, "Confirm Password" %>
    <%= form.password_field :password_confirmation, placeholder: "Confirm password" %>
  </div>

  <%= form.submit "Create User", class: "btn btn-primary mt-3" %>

<% end %>