<div class="container mt-4">
  <h1 class="text-center text-primary mb-4">Users List</h1>

  <div class="text-end mb-3">
    <%= link_to "Sign up new user",  new_user_registration_path, class: 'btn btn-primary' %><br />
  </div>

  <p class="mb-4">Users count: <%= @users.count %></p>

  <% if @users.count > 0 %>
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Email</th>
          <th>Username</th>
          <th>Phone</th>
          <th>Role</th>
          <th>Active</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.email, user_path(user) %></td>
            <td><%= user.username %></td>
            <td><%= user.phone %></td>
            <td><%= user.role_int %></td>
            <td>
                <% if user.is_active %>
                    <span>Yes</span>
                <% else %>
                    <span>No</span>
                <% end %>
            </td>
            <td>
            <div class="d-flex">

              <% if user.is_active %>
                <%= button_to 'Deactivate', deactivate_user_path(user), method: :patch, class: 'btn btn-danger btn-sm me-2' %>
              <% else %>

                <%= button_to 'Activate', activate_user_path(user), method: :patch, class: 'btn btn-success btn-sm me-2' %>
              <% end %>

              <% if can? :update, user %>
                <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary btn-sm' %>
              <% end %>

            </div>
            </td>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-center text-danger">There are no users to show</p>
  <% end %>
</div>