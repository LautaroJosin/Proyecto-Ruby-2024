<div class="container mt-4">
  <h1 class="text-center text-primary mb-4">Users List</h1>

  <p class="mb-4">Users count: <%= @users.count %></p>

  <% if @users.count > 0 %>
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Email</th>
          <th>Username</th>
          <th>Phone</th>
          <th>Role</th>
          <th>Active</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.username %></td>
            <td><%= user.phone %></td>
            <td><%= user.role_int %></td>
            <td>
                <% if user.is_active %>
                    <span class="badge bg-success">Yes</span>
                <% else %>
                    <span class="badge bg-danger">No</span>
                <% end %>
            </td>
            <td>
                <% if user.is_active %>
                    <%= link_to 'Deactivate', '#', class: 'btn btn-danger btn-sm' %>
                <% else %>
                    <%= link_to 'Activate', '#', class: 'btn btn-success btn-sm' %> 
                <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-center text-danger">There are no users to show</p>
  <% end %>
</div>