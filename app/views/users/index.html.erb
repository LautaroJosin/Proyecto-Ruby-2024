<div class="container mt-4">
  <h1 class="text-center text-primary mb-4">Users List</h1>

  <div class="text-end mb-3">
    <%= link_to 'Add new user', new_user_path, class: 'btn btn-success' %>
  </div>

  <p class="mb-4">Users count: <%= @users.count %></p>

  <% if @users.count > 0 %>
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Join Date</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.name, user_path(user), class: 'text-decoration-none' %></td>
            <td><%= user.email %></td>
            <td><%= user.phone %></td>
            <td><%= user.join_date.strftime("%B %d, %Y") %></td>
            <td>
              <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary btn-sm me-2' %>
              <%= link_to 'Delete', user_path(user), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this user?" }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-center text-danger">There are no users to show</p>
  <% end %>
</div>
