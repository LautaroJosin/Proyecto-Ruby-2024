<h1>Edit User</h1>

<%= form_with model: @user do |form| %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :phone %>
    <%= form.telephone_field :phone %>
  </div>

  <div>
    <%= form.label :join_date, "Join Date" %>
    <%= form.date_field :join_date %>
  </div>

    <div>
        <%= form.label :role, "Role" %> 
        <%= form.collection_select :role_id, Role.where.not(name: 'Administrador'), :id, :name, { include_blank: true } %>
    </div>

  <%= form.submit "Update User" %>

<% end %>