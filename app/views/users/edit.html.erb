<div class="container mt-5">
  <h1 class="text-center text-primary mb-4">Edit User</h1>

  <%= form_with model: @user, class: 'needs-validation' do |form| %>
    <div class="row mb-3">
      <div class="col-md-6">
        <%= form.label :username, class: 'form-label' %>
        <%= form.text_field :username, class: 'form-control', placeholder: 'e.g., johndoe' %>
      </div>
      <div class="col-md-6">
        <%= form.label :email, class: 'form-label' %>
        <%= form.email_field :email, class: 'form-control', placeholder: 'e.g., johndoe@example.com' %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-6">
        <%= form.label :phone, class: 'form-label' %>
        <%= form.telephone_field :phone, class: 'form-control', placeholder: 'e.g., (123) 456-7890' %>
      </div>
    </div>

    <div class="mb-3">
      <%= link_to 'Change password', edit_user_password_path, class: 'btn btn-warning' %>
    </div>

    <div class="d-grid gap-2">
      <%= form.submit 'Save Changes', class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
</div>

