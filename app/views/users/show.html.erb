<div class="container mt-4">
  <h1 class="text-center text-primary mb-4">User: <%= @user.name %></h1>

  <div class="row">
    <div class="col-md-6 mb-3">
      <strong>Name:</strong>
      <span><%= @user.name %></span>
    </div>

    <div class="col-md-6 mb-3">
      <strong>Email:</strong>
      <span><%= @user.email %></span>
    </div>

    <div class="col-md-6 mb-3">
      <strong>Phone:</strong>
      <span><%= @user.phone %></span>
    </div>

    <div class="col-md-6 mb-3">
      <strong>Join Date:</strong>
      <span><%= @user.join_date.strftime("%B %d, %Y") %></span>
    </div>

    <div class="col-md-6 mb-3">
      <strong>Role:</strong>
      <span><%= @user.role.name %></span>
    </div>

    <div class="col-md-12 mb-3 text-center">
      <%= link_to 'Edit user', edit_user_path(@user), class: 'btn btn-warning m-2' %>
      <%= link_to 'Delete user', user_path(@user), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this user?" }, class: 'btn btn-danger m-2' %>
    </div>
  </div>
</div>